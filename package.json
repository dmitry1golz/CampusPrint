{
  "dependencies": {
    "typescript": "^5.9.3"
  },
  "scripts": {
    "compile": "npx tsc -p src/main/resources/tsconfig.json",
    "ts-watch": "npx tsc -p src/main/resources/tsconfig.json --watch",
    "ts-watch-bg-win": "start cmd /c \"npx tsc -p src/main/resources/tsconfig.json --watch\"",
    "ts-watch-bg-os": "npx tsc -p src/main/resources/tsconfig.json --watch &",
    "ts-watch-stop-os": "kill $(pgrep -f 'npx tsc -p')",
    "ts-watch-stop-win": "start taskkill /F /IM node.exe",
    "lint:ts": "eslint 'src/**/*.ts' --format junit --output-file reports/eslint.xml",
    "lint:css": "stylelint 'src/**/*.css' --custom-formatter node_modules/stylelint-junit-formatter/index.js --output-file reports/stylelint.xml",
    "lint:html": "html-validate 'src/main/resources/static/*.html' --formatter checkstyle",
    "lint:java": "./mvnw spotless:check",
    "lint:all": "mkdir -p reports && npm run lint:ts ; npm run lint:css ; npm run lint:html"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-formatter-junit": "^9.0.1",
    "html-validate": "^10.5.0",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-junit-formatter": "^0.2.2",
    "typescript-eslint": "^8.52.0"
  }
}
